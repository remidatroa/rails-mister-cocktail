<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<h3> Ingredients </h3>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <p>
      <%= dose.description %>
    </p>
    <p>
      <%= dose.ingredient.name  %>
    </p>
  <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ul>




<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
